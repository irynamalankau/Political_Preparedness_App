<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header">
        <item name="android:layout_width">@dimen/match_constraints</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">@dimen/match_constraints</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="icon_social_media">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="election_item_title">
        <item name="android:layout_width">@dimen/match_constraints</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="election_item_date">
        <item name="android:layout_width">@dimen/match_constraints</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


</resources>
